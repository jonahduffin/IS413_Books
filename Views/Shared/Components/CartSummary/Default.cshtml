@model Cart

<div class="">
    @if (Model.Lines.Count() > 0)
    {
        <small class="navbar-text">
            <b>Your cart:</b>
            @Model.Lines.Sum(x => x.Quantity) book(s)
            @Model.ComputeTotalSum().ToString("c")
        </small>
    }
    <a class="btn btn-sm btn-outline-light navbar-btn" asp-page="/Purchase"
       asp-route-returnurl="@ViewContext.HttpContext.Request.PathAndQuery()">
        View Cart
    </a>
</div>