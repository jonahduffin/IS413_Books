@{
    ViewData["Title"] = "Jonah's Books";
}

@model BookListViewModel

<div class="text-center">
    <h1 class="display-4">Welcome to Jonah's Books!</h1>
  
</div>

<div class="test-center">
    <p class="text-center">We started with 10 humble book recommendations from my IS 413 professor, Spencer Hilton. We're growing every week! Enjoy your stay.</p>
</div>

<div class="p-5">
    <table class="table table-dark">
        <thead class="thead-dark">
            <tr>
                <th>Title</th>
                <th>Author</th>
                <th>Publisher</th>
                <th>ISBN</th>
                <th>Classification/Category</th>
                <th>Price</th>
                <th>Number of Pages</th>
            </tr>
        </thead>
        @foreach (var book in Model.Books)
        {
            <tr>
                <td>@book.title</td>
                <td>@book.author</td>
                <td>@book.publisher</td>
                <td>@book.isbn</td>
                <td>@book.classification</td>
                <td>$@Math.Round((Double)book.price, 2)</td>
                <td>@book.numPages</td>
            </tr>

        }
    </table>
    <div page-model="@Model.PagingInfo" page-action="Index" page-classes-enabled="true" page-class="btn" page-class-normal="btn-dark" page-class-selected="btn-light" class="btn-group pull-right m-1"></div>
</div>

