@{
    ViewData["Title"] = "Jonah's Books";
}

@model IQueryable<Book>

<div class="text-center">
    <h1 class="display-4">Welcome to Jonah's Books!</h1>
  
</div>

<div class="test-center">
    <p class="text-center">To start things off, here are 10 book recommendations from my IS 413 professor, Spencer Hilton.</p>
</div>

<table class="table table-dark">
    <thead>
        <tr>
            <th>Title</th>
            <th>Author</th>
            <th>Publisher</th>
            <th>ISBN</th>
            <th>Classification/Category</th>
            <th>Price</th>
        </tr>
    </thead>
    @foreach (var book in Model)
    {
        <tr>
            <td>@book.title</td>
            <td>@book.author</td>
            <td>@book.publisher</td>
            <td>@book.isbn</td>
            <td>@book.classification</td>
            <td>$@Math.Round((Double)book.price, 2)</td>
        </tr>

    }
</table>
